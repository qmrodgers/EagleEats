@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="bottomnav" style="margin-top: auto">
@if (SignInManager.IsSignedIn(User))
{
    
        <a class="nav-link nav-bottom" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
        <div class="nav-item">
            <span>Hello @User.Identity?.Name!</span>
            </div></a>
    
        <a class="nav-link" id="logout" onclick="document.getElementById('logoutForm').submit()">
        <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" class="nav-item">
            <span>Logout</span>
        </form>
        </a>
    
}
else
{
    
        <a class="nav-link nav-bottom" id="register" asp-area="Identity" asp-page="/Account/Register">
        <div class="nav-item">
            <span>Register</span>
            </div>
            </a>
    
    
        <a class="nav-link nav-bottom" id="login" asp-area="Identity" asp-page="/Account/Login">
        <div class="nav-item">
            <span>Login</span>
            </div>
            </a>
    
}
</div>
