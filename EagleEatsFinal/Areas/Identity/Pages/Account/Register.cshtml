@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="">
    <div class="">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class=""></div>
            <div class="">
                <input asp-for="Input.Email" class="" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class=""></span>
            </div>
            <div class="">
                <input asp-for="Input.FirstName" class="" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class=""></span>
            </div>
            <div class="">
                <input asp-for="Input.LastName" class="" />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class=""></span>
            </div>
            <div class="">
                <input asp-for="Input.Address" class="" />
                <label asp-for="Input.Address"></label>
                <span asp-validation-for="Input.Address" class=""></span>
            </div>
            <div class="">
                <input asp-for="Input.Password" class="" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class=""></span>
            </div>
            <div class="">
                <input asp-for="Input.ConfirmPassword" class="" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class=""></span>
            </div>
            <div class="">
                <input asp-for="Input.UserRegistrationKey" class="" />
                <label asp-for="Input.UserRegistrationKey"></label>
                <span asp-validation-for="Input.UserRegistrationKey" class=""></span>
            </div>
            <button id="registerSubmit" type="submit" class="">Register</button>
        </form>
    </div>
    <div class="">
        <section>
            <h3>Use another service to register.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                            about setting up this ASP.NET application to support logging in via external services</a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
